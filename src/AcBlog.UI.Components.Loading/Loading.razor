
<div class="loading @TypeClass">
    <div>
        <div>
            <div>
                <div>
                    <div>
                        <div></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    static Random rand = new Random();

    [Parameter]
    public int Type { get; set; } = rand.Next(1, 5);

    private string TypeClass { get; set; }

    protected override void OnParametersSet()
    {
        TypeClass = $"loading{Math.Max(1, Math.Min(4, Type))}";
    }
}
