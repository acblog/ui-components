@page "/"
@model Host.Base.Server.Pages._HostModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Host.Base.Client

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Host.Base</title>
    <base href="/" />
    <component type="typeof(AcBlog.UI.Components.StyleSheetDeclare)" render-mode="Static" />
</head>

<body>
    <app>
        <component type="typeof(App)" render-mode="Static" />
    </app>

    <div id="blazor-error-ui">
        An unhandled error has occurred.
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>
    <script src="_framework/blazor.webassembly.js"></script>
    <script src="_content/AcBlog.UI.Components.Core/component.js"></script>

    <component type="typeof(AcBlog.UI.Components.ScriptDeclare)" render-mode="Static" />
</body>

</html>
